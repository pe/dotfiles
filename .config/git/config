[include]
	path = ~/.config/git/local
[core]
	excludesfile = ~/.config/git/ignore_global
	pager= delta
	hooksPath = ~/.config/git/hooks
[fetch]
	prune = true
[interactive]
	diffFilter = delta --color-only
[feature]
	manyFiles = true
[alias]
	ls = log --format=format:'%C(magenta)%h %C(cyan)%ah %C(green)%an %C(white)%s %C(auto)%D%C(reset)'
	lsa = log --format=format:'%C(magenta)%h %C(cyan)%ah %C(green)%an %C(white)%s %C(auto)%D%C(reset)' --graph --all
    rebasemaster= "!f() { git rebase --interactive `git merge-base origin/master HEAD`; }; f"
[rebase]
	autosquash = true
	updateRefs = true
[push]
	default = current
[pull]
	rebase = true
[merge]
	tool = vscode
	conflictstyle = zdiff3
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[diff]
	algorithm = histogram
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[delta]
	features = line-numbers
	whitespace-error-style = 22 reverse
	hunk-header-style = omit
	syntax-theme = base16
	hyperlinks = true
[help]
	autocorrect = 15
[trim]
	protected = *release/*,*hotfix/*
