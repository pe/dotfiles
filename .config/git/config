[include]
	path = ~/.config/git/local
[core]
	excludesfile = ~/.config/git/ignore_global
	pager= delta
	hooksPath = ~/.config/git/hooks
	untrackedCache = true #until we can enable manyFiles again
[fetch]
	prune = true
[interactive]
	diffFilter = delta --color-only
[feature]
	manyFiles = false
[alias]
	ls = log --format=format:'%C(magenta)%h %C(cyan)%ah %C(green)%an %C(white)%s %C(auto)%D%C(reset)'
	lsa = log --format=format:'%C(magenta)%h %C(cyan)%ah %C(green)%an %C(white)%s %C(auto)%D%C(reset)' --graph --all
    rebaseonly= "!git rebase --interactive $(git merge-base $1 HEAD) #"
[rebase]
	autosquash = true
	updateRefs = true
[push]
	default = current
[pull]
	rebase = true
[merge]
	tool = intellij
	conflictstyle = zdiff3
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[mergetool "intellij"]
	cmd = /Applications/IntelliJ\\ IDEA.app/Contents/MacOS/idea merge $(cd $(dirname \"$LOCAL\") && pwd)/$(basename \"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(basename \"$REMOTE\") $(cd $(dirname \"$BASE\") && pwd)/$(basename \"$BASE\") $(cd $(dirname \"$MERGED\") && pwd)/$(basename \"$MERGED\")
	trustExitCode = true
[diff]
	algorithm = histogram
	tool = intellij
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[difftool "intellij"]
	cmd = /Applications/IntelliJ\\ IDEA.app/Contents/MacOS/idea diff $(cd $(dirname \"$LOCAL\") && pwd)/$(basename \"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(basename \"$REMOTE\")
[delta]
	features = line-numbers
	whitespace-error-style = 22 reverse
	hunk-header-style = omit
	syntax-theme = base16
	hyperlinks = true
[help]
	autocorrect = 15
[trim]
	protected = *release/*,*hotfix/*
